{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

    {% block content %}
        <div class="container mt-4">
            <h2>Product details</h2>
            
            <div class="product-detail-page">
                <img src="{{asset('uploads/' ~ product.picture)}}" alt="" class="img-fluid m-auto" width="420">
                <div class="details">
                    <h1>{{product.name}}</h1>
                    <h2> <p class="badge badge-warning p-3">
                        <i class="fa fa-tag"></i> {{ (product.price / 100)|number_format(2)}}â‚¬</p></h2>
                    <p>{{product.description}}</p>
                    <a href="{{path('add_to_cart', {id: product.id})}}"  class="btn btn-success mt-5">Add to cart</a>
                </div>
            </div>

    </div>
    {% endblock %}

