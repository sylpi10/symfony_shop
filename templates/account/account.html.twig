{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

    {% block content %}
        <div class="container mt-5">
            <h1>Welcome {{app.user.nickname}} !</h1>

            {% for message in app.flashes('success') %}
            <div class="flash-notice alert alert-success w-50">
                {{ message }}
            </div>
            {% endfor %}

            <ul>
                {% if is_granted('ROLE_ADMIN') %}
                <li>
                    <a class="nav-link text-info" href='/admin'> Admin Dashboard</a>
                </li>
                {% endif %}
                <li><a href="{{path('account_password')}}">Change my infos</a></li>
                <li><a href="{{path('account_address')}}">Change my addresses</a></li>
                <li><a href="{{path('account_orders')}}">My orders</a></li>
            </ul>
            <hr>
        </div>
{% endblock %}